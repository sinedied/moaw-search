{
  "name": "search-api-node",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "exports": "./src/app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "npm run build && fastify start -l info dist/app.js",
    "test": "npm run build && tsc -p test/tsconfig.json && tap --ts \"test/**/*.test.ts\"",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l debug -P dist/app.js | pino-pretty",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "docker:build": "docker build --tag a11y-api .",
    "docker:run": "docker run --rm --publish 3000:3000 --env-file .env a11y-api",
    "clean": "rm -rf dist *.tgz"
  },
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "dependencies": {
    "@fastify/autoload": "^5.0.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/sensible": "^5.0.0",
    "@qdrant/js-client-rest": "^1.3.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.0.0",
    "fastify-cli": "^5.7.0",
    "fastify-plugin": "^4.0.0",
    "fastify-sse-v2": "^3.1.2",
    "openai": "^3.3.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/tap": "^15.0.5",
    "@types/uuid": "^9.0.2",
    "concurrently": "^8.2.0",
    "fastify-tsconfig": "^1.0.1",
    "pino-pretty": "^10.2.0",
    "tap": "^16.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^5.1.6",
    "xo": "^0.55.0"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node",
      "jest"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
